@page "/settings"
@inject IThemeProvider Themes

<MudSwitch T="bool" Checked="Themes.CurrentTheme == ThemeProvider.DarkTheme" CheckedChanged="ToggleTheme">
    Dark Theme
</MudSwitch>

@code {

    /// <inheritdoc />
    protected override void OnInitialized()
    {
        Themes.ThemeChanged += (_, _) => StateHasChanged();
    }

    private void ToggleTheme(bool isDark)
    {
        Themes.ChangeTheme(isDark ? ThemeProvider.DarkTheme : ThemeProvider.LightTheme);
    }

}
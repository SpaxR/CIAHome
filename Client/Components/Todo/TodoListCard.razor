<MudCard @onclick="OnClick">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText>@List.Text</MudText>
            <MudText>@(List.Todos.Any() ? List.Todos.Count() : "No") Todos</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@(Icons.Filled.Delete)" OnClick="OnDelete"></MudIconButton>
        </CardHeaderActions>
    </MudCardHeader>
</MudCard>

@code {

    [Parameter]
    public TodoList List { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
    
    [Parameter]
    public EventCallback<MouseEventArgs> OnDelete { get; set; }

    /// <inheritdoc />
    protected override void OnParametersSet()
    {
        if (List == null) throw new ArgumentNullException(nameof(List));
    }
}
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText>@(List?.Text ?? "Todo List")</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@(Icons.Sharp.Delete)" OnClick="OnDelete"></MudIconButton>
        </CardHeaderActions>
    </MudCardHeader>
</MudCard>


@code {

    [Parameter]
    public TodoList List { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnDelete { get; set; }

}
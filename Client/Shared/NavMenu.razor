@inherits LayoutComponentBase
<MatAppBarContainer>
    <MatAppBar>
        <MatAppBarRow>
            <MatAppBarSection Align="MatAppBarSectionAlign.Start">
                <MatIconButton Icon="menu" OnClick="ToggleDrawer"></MatIconButton>
                <MatButtonLink Href="/">@Title</MatButtonLink>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>

    <MatAppBarContent>
        <MatDrawerContainer>
            <MatDrawer Opened="IsDrawerOpen">
                PLACE LINKS HERE
            </MatDrawer>
            <MatDrawerContent>
                @Content
            </MatDrawerContent>
        </MatDrawerContainer>
    </MatAppBarContent>
</MatAppBarContainer>

@code
{
    [Parameter]
    public string Title { get; set; }
    
    [Parameter]
    public RenderFragment Content { get; set; }
    
    private bool IsDrawerOpen { get; set; }
    
    private void ToggleDrawer() => IsDrawerOpen = !IsDrawerOpen;
}
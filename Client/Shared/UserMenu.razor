@using CIAHome.Shared
<AuthorizeView>
    <Authorized>
        <MudButton OnClick="Logout">Logout</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Link="/login">Login</MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {

    [Inject]
    HttpClient Http { get; set; }

    private async Task Logout()
    {
        await Http.GetAsync(CIAPath.Logout);
    }

}